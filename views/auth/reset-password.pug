extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estates 
        h2.text-center.text-purple-700.font-bold.text-2xl= page 

        if errors
            .max-w-md.mx-auto.my-10
            each error in errors
                p.text-purple-700.text-xs.text-center.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-5.font-bold(for="password") Type a new password
                         input#password.w-full.px-2.py-2.border.border-gray-300.mt-2.rounded-md.placeholder-gray-300(placeholder="Your new password" type="password" name="password")
                    input(type="submit" value="Reset" class="w-full bg-indigo-400 hover:bg-indigo-500 text-white py-2 cursor-pointer rounded-md mt-5")