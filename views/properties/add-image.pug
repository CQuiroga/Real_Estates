extends ../layout/admin

block styles

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estates 
        h2.text-center.text-purple-700.font-bold.text-2xl= page

        if errors
            .max-w-md.mx-auto.my-10
            each error in errors
                p.text-purple-700.text-xs.text-center.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class ="space-y-4" method="POST" action="/properties/create")
                input(type="hidden" name="_csrf" value= csrfToken)
                input(type="submit" value="Publish Property" class="w-full bg-indigo-400 text-white hover:bg-indigo-500 py-2 cursor-pointer rounded-md mt-5")

block scripts
