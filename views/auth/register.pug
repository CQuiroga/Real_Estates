extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-bold.text-center Real
            span.font-normal Estates 
        h2.text-center.text-purple-700.font-bold.text-2xl= page 
        
        if errors
            .max-w-md.mx-auto.my-10
            each error in errors
                p.text-purple-700.text-xs.text-center.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="name") Your Name
                         input#name.w-full.px-2.py-2.border.text-gray-600.border-gray-300.mt-2.rounded-md.placeholder-gray-300(placeholder="Your Name" type="text" name="name" value= user? user.name : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="email") Your Email
                         input#email.w-full.px-2.py-2.border.text-gray-600.border-gray-300.mt-2.rounded-md.placeholder-gray-300(placeholder="Your Email" type="email" name="email" value= user? user.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="password") Your Password
                         input#password.w-full.px-2.py-2.border.text-gray-600.border-gray-300.mt-2.rounded-md.placeholder-gray-300(placeholder="Your Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="repeat_password") Repeat Password
                         input#repeat_password.w-full.px-2.py-2.border.text-gray-600.border-gray-300.mt-2.rounded-md.placeholder-gray-300(placeholder="Repeat Your Password" type="password" name="repeat_password")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-400.text-xs.my-2(href="/auth/login") Â¿Do you have an Account?, Login
                        a.text-gray-400.text-xs.my-2(href="/auth/forgot-password") Forgot my Password

                    input(type="submit" value="Create a new account" class="w-full bg-indigo-500 text-white-200 hover:bg-indigo-700 text-white py-2 cursor-pointer rounded-md")